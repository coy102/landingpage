{
  "presets": ["next/babel"],
  "plugins": [
    ["styled-components", { "ssr": true }],
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "@components": "./src/components",
          "@modules": "./src/modules",
          "@utils": "./src/utils",
          "@public": "./src/public"
        }
      }
    ]
  ]
}
